\IfFontExistsTF{方正新书宋_GBK}{
	\IfFontExistsTF{方正新楷体_GBK}{
		\IfFontExistsTF{方正粗雅宋_GBK}{
			\setCJKmainfont{方正新书宋_GBK}[
				ItalicFont = 方正新楷体_GBK,
				BoldFont = 方正粗雅宋_GBK,
			]
			\setCJKfamilyfont { zhsong } { 方正新书宋_GBK }
			[ cmap = UniGB-UTF16-H, BoldFont = 方正粗雅宋_GBK ]
      \setCJKfamilyfont { zhkai } { 方正新楷体_GBK }
      [ cmap = UniGB-UTF16-H ]
		}{}
	}{}
}{}
\IfFontExistsTF{Noto Sans CJK SC}{
	\setCJKsansfont{Noto Sans CJK SC}
}{}
\setsansfont{IBM Plex Sans}